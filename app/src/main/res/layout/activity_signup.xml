<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.signup">

  <TextView
      android:id="@+id/Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="240dp"
      android:text="Sign Up"
      android:textColor="#113F9C"
      android:textSize="48sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.114"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/inputusername"
      android:layout_width="330dp"
      android:layout_height="50dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="20dp"
      app:boxBackgroundColor="#FFFFFF"
      app:boxStrokeWidth="1dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Title">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User name"
        android:paddingStart="0dp"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF" />

  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/inputpass"
      android:layout_width="330dp"
      android:layout_height="50dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="20dp"
      app:boxBackgroundColor="#FFFFFF"
      app:boxStrokeWidth="1dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/inputusername">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:paddingStart="0dp"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF" />

  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/inputname"
      android:layout_width="330dp"
      android:layout_height="50dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="20dp"
      app:boxBackgroundColor="#FFFFFF"
      app:boxStrokeWidth="1dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/inputpass">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full name"
        android:paddingStart="0dp"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF" />

  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/inputphone"
      android:layout_width="330dp"
      android:layout_height="50dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="20dp"
      app:boxBackgroundColor="#FFFFFF"
      app:boxStrokeWidth="1dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/inputname">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:paddingStart="0dp"
        android:textColor="@color/black"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF" />

  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/buttonLogin"
      android:layout_width="71dp"
      android:layout_height="48dp"
      android:layout_marginTop="14dp"
      android:layout_marginBottom="16dp"
      android:background="#00FFFFFF"
      android:backgroundTint="#FFFFFF"
      android:insetLeft="0dp"
      android:insetTop="0dp"
      android:insetRight="0dp"
      android:insetBottom="0dp"
      android:paddingStart="0dp"
      android:paddingLeft="0dp"
      android:paddingTop="4dp"
      android:paddingEnd="0dp"
      android:paddingRight="16dp"
      android:paddingBottom="4dp"
      android:text="Login"
      android:textColor="#0B6ED8"
      android:textColorHint="#000000"
      app:cornerRadius="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/textView"
      app:layout_constraintTop_toBottomOf="@+id/buttonSignUp"
      app:rippleColor="#FFFFFF"
      app:strokeWidth="0dp" />

  <Button
      android:id="@+id/buttonSignUp"
      android:layout_width="315dp"
      android:layout_height="62dp"
      android:layout_marginTop="20dp"
      android:backgroundTint="#227BC1"
      android:text="Register"
      app:cornerRadius="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/inputphone" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="408dp"
      android:layout_height="238dp"
      app:layout_constraintBottom_toTopOf="@+id/Title"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/signup" />

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_marginTop="43dp"
      app:layout_constraintEnd_toStartOf="@+id/inputpass"
      app:layout_constraintHorizontal_bias="0.769"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView10"
      app:srcCompat="@drawable/signup_pass" />

  <ImageView
      android:id="@+id/imageView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="33dp"
      app:layout_constraintEnd_toStartOf="@+id/inputusername"
      app:layout_constraintHorizontal_bias="0.777"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Title"
      app:srcCompat="@drawable/signup_acong" />

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_marginTop="47dp"
      app:layout_constraintEnd_toStartOf="@+id/inputname"
      app:layout_constraintHorizontal_bias="0.756"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView7"
      app:srcCompat="@drawable/signup_user" />

  <ImageView
      android:id="@+id/imageView11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="45dp"
      app:layout_constraintEnd_toStartOf="@+id/inputphone"
      app:layout_constraintHorizontal_bias="0.777"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView8"
      app:srcCompat="@drawable/signup_phone" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="116dp"
      android:layout_height="15dp"
      android:layout_marginStart="100dp"
      android:layout_marginBottom="20dp"
      android:text="Joined us before?"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonSignUp"
      app:layout_constraintVertical_bias="0.687" />

  <ImageView
      android:id="@+id/imageView13"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="32dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/signup_back" />

</androidx.constraintlayout.widget.ConstraintLayout>